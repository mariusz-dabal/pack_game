{% extends 'base.html.twig' %}

{% block title %}Gra w Paczkę{% endblock %}

{% block body %}
    <div class="container-fluid p-0 test" id="id">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid flex-lg-column">
                <button id="menuButton" class="navbar-toggler align-self-start " type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="logo mx-auto" href="#">Paczka</a>
                <div class="dropdown-divider w-100"></div>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('manual') }}">Instrukcja</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Disabled</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-lg ">
            <h1 class="display-3 text-center p-5">Światowy ranking gry w paczkę</h1>

            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Gracz</th>
                    <th scope="col">Punkty</th>
                    <th scope="col">Zwycięstwa</th>
                </tr>
                </thead>
                <tbody>
                {% for player in players %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ player.name }}</td>
                        <td>{{ player.points }}</td>
                        <td>{{ player.wins }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
